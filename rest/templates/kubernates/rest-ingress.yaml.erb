apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: rest-ingress-<%= @ID %>
  namespace: <%= @organizationID %>
  labels:
    app: rest-app-<%= @ID %>
spec:
  ingressClassName: nginx
  rules:
    - host: <%= @domain %>
      http:
        paths:
          - path: /febe-rest-<%= @ID %>/
            pathType: Prefix
            backend:
              service:
                name: rest-service-<%= @ID %>
                port:
                  number: 80
